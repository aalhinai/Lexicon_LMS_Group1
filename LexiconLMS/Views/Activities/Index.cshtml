@model IEnumerable<LexiconLMS.Models.Activity>

@{
    ViewBag.Title = "Activities";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Module.ModuleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivityDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Module.ModuleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityEndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityDescription)
        </td>
        <td class="hidden-print">

            @*@Html.ActionLink("Details", "Details", new { id=item.ActivityId })*@
            @Html.ActionLink(" ", "Details", new { id = item.ActivityId }, new { @class = "glyphicon glyphicon-file", title = "Details about activity " + item.ActivityName }) &nbsp;&nbsp;&nbsp;

            @*@Html.ActionLink("Edit", "Edit", new { id=item.ActivityId })*@
            @Html.ActionLink(" ", "Edit", new { id = item.ActivityId }, new { @class = "glyphicon glyphicon-edit", title = "Edit this activity " + item.ActivityName }) <text>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</text>

            @*@Html.ActionLink("Delete", "Delete", new { id=item.ActivityId })*@
            @Html.ActionLink(" ", "Delete", new { id = item.ActivityId }, new { @class = "glyphicon glyphicon-trash", title = "Delete the activity " + item.ActivityName, style = "color:red" })

        </td>
    </tr>
}

</table>
