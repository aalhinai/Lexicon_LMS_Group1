@model LexiconLMS.Models.Document

@{
    ViewBag.Title = "AssignmentDetails";
}

<h2>Assignment:</h2>
  <h3>@Model.Activity.ActivityName</h3>

<div style="text-align:left;">
     <hr />
    <h5><b>Document Name:</b> @Model.DocName</h5>
    <h5><b>Assignment Status:</b> <font color="red">@Model.Status</font></h5>
    <h5><b>Teacher's Feedback:</b></h5>

    <dl>
        @*<dt>Your Feedback</dt>*@
        <dd>@Html.TextAreaFor(model => model.FeedBack, new { @class = "hidden-print" }) </dd>
        @*<dt>Assignment Status</dt>
        <dd>@Model.Status</dd>*@
    </dl>


</div>
<script type="text/javascript">
    feedback = document.getElementById("FeedBack");
    feedback.cols = 30;
    feedback.rows = 5;
    feedback.readOnly = true;
</script>