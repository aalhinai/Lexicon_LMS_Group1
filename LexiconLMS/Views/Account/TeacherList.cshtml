@model IEnumerable<LexiconLMS.Models.DisplayUserViewModel>
@{
    ViewBag.Title = "Teacher list";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>Teacher Name</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserFullName</td>
            <td>@item.Email</td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit", title = "Edit this teacher account" }) &nbsp;&nbsp;&nbsp;&nbsp;
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-trash", title = "Delete this teacher account", style = "color:#d60000"}) &nbsp;&nbsp;&nbsp;
            </td>
        </tr>
    }
</table>
@if (User.IsInRole("Teacher"))
{
    @Html.ActionLink("Create New Teacher", "Register", new {role = "Teacher"}, new { @class = "hidden-print" })
}
