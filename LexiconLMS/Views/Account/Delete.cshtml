@model LexiconLMS.Models.DisplayUserViewModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserLastName)
        </dd>

    </dl>

    @using (Html.BeginForm(new { redirectString = ViewBag.RedirectString })) // Send the redirect string back to controller.
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @if (ViewBag.RedirectString != "Empty") // Check the value of the redirect string, if it is not set to "Empty" we can redirect back to a previous page.
            {
                <a href=@ViewBag.RedirectString>Back</a>
            }
            else // If redirect string is not defined we presume the user came from TeacherList view.
            {
                @Html.ActionLink("Back", "TeacherList")
            }
        </div>
    }
</div>
