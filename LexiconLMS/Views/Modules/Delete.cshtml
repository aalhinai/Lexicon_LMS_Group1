@model LexiconLMS.Models.Module

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Module</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModuleName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModuleName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModuleDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModuleDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModuleStartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModuleStartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModuleEndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModuleEndDate)
        </dd>

    </dl>

    @using (Html.BeginForm(new { redirectString = ViewBag.RedirectString }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color hidden-print">
            @if (ViewBag.RedirectString != "Empty")
            {
                <a href=@ViewBag.RedirectString class = "glyphicon glyphicon-arrow-left" title = "Back to module list", style = "font-size:22px; margin-right:60px"></a>
            }
            else
            {
                @Html.ActionLink(" ", "Details", "Courses", new { id = Model.CourseId }, new { @class = "glyphicon glyphicon-arrow-left", title = "Back to course details", style = "font-size:18px; margin-right:60px;" })
            }

            @{ string deleteModule = "Delete module " + Model.ModuleName; }
            <button type="submit" class="btn btn-danger" title = "@deleteModule"><span class = "glyphicon glyphicon-trash" style = "font-size:18px"></span></button>
        </div>
    }

